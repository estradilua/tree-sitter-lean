{
  "name": "tree-sitter-lean",
  "version": "0.1.0",
  "description": "Lean grammar for tree-sitter",
  "repository": "https://github.com/estradilua/tree-sitter-lean",
  "license": "GPL-3.0-or-later",
  "author": {
    "name": "Lua Reis",
    "email": "me@lua.blog.br",
    "url": "https://lua.blog.br/"
  },
  "main": "bindings/node",
  "types": "bindings/node",
  "keywords": [
    "incremental",
    "parsing",
    "tree-sitter",
    "lean"
  ],
  "type": "module",
  "files": [
    "grammar.js",
    "grammar/**",
    "tree-sitter.json",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**",
    "*.wasm"
  ],
  "dependencies": {
    "node-addon-api": "^8.2.1",
    "node-gyp-build": "^4.8.2",
    "typescript": "^5.8.3",
    "typescript-formatter": "^7.2.2"
  },
  "devDependencies": {
    "prebuildify": "^6.0.1",
    "tree-sitter-cli": "^0.25.5"
  },
  "peerDependencies": {
    "tree-sitter": "^0.25.0"
  },
  "peerDependenciesMeta": {
    "tree-sitter": {
      "optional": true
    }
  },
  "scripts": {
    "install": "node-gyp-build",
    "prestart": "tree-sitter build --wasm",
    "start": "tree-sitter playground",
    "test": "node --test bindings/node/*_test.js"
  }
}
